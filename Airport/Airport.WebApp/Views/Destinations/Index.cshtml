@model List<Airports.ViewModels.Models.Destinations.DestinationIndexViewModel>

<h1>Destinations page</h1>


<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Date</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.StartAirport</td>
                <td>@p.DestinationAirport</td>
                <td>@p.Date</td>
                <td>@p.Price</td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>